.bottomsheet
  position fixed
  bottom 0
  left 0
  right 0
  background #fff
  padding 6px 10px
  transform translate(0,100%)
  transition all .5s ease
  z-index 20
  &.bs-open
    transform translate(0,0)
  .bottomsheet-head
    position relative
    height 40px
    line-height 40px
    border-bottom 2px solid #d5d5d5
    h2
      font-size 20px
      font-weight bold
      vertical-align top
  .bottomsheet-list
    height 260px
    overflow-y auto
    overflow-x hidden
    li
      font-size 16px
      color #666
      line-height 36px
      height 36px
.divider
  height 0
  border-top 1px solid #e5e5e5